<Application x:Class="Crosspose.Dekompose.Gui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Crosspose.Dekompose.Gui">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Colors.Dark.xaml" />
                <!-- Light last so it's the default -->
                <ResourceDictionary Source="Themes/Colors.Light.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Minimal: default controls; opt-in green via Tag="AccentPositive" -->
            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Style.Triggers>
                    <Trigger Property="Tag" Value="AccentPositive">
                        <Setter Property="Background" Value="{DynamicResource AccentPositive}" />
                        <Setter Property="Foreground" Value="White" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
