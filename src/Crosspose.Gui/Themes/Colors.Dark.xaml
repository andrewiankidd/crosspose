<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Base -->
    <SolidColorBrush x:Key="WindowBackground" Color="#1B1B1B" />
    <SolidColorBrush x:Key="PanelBackground" Color="#1F2933" />
    <SolidColorBrush x:Key="SidebarBackground" Color="#2A1E36" />
    <SolidColorBrush x:Key="BorderBrushColor" Color="#3A3F4B" />
    <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF" />
    <SolidColorBrush x:Key="TextMuted" Color="#C7CBD1" />
    <SolidColorBrush x:Key="InputBackground" Color="#242A32" />
    <SolidColorBrush x:Key="InputBorder" Color="#3A3F4B" />

    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#2A1E36" />
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ButtonBorder" Color="#3A3F4B" />
    <SolidColorBrush x:Key="ButtonDisabledBackground" Color="#2C2C2C" />
    <SolidColorBrush x:Key="ButtonDisabledForeground" Color="#A0A6B0" />
    <SolidColorBrush x:Key="ButtonDisabledBorder" Color="#343A45" />
    <SolidColorBrush x:Key="AccentPositive" Color="#16A34A" />

    <!-- Lists -->
    <SolidColorBrush x:Key="ListBackground" Color="#20252D" />
    <SolidColorBrush x:Key="ListBorder" Color="#3A3F4B" />

    <!-- Error/Warning -->
    <SolidColorBrush x:Key="ErrorBorder" Color="#FF4D4F" />
    <SolidColorBrush x:Key="ErrorBackground" Color="#331F1F" />
    <SolidColorBrush x:Key="ErrorText" Color="#FFB3B3" />
</ResourceDictionary>
